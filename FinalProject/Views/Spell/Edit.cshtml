@model FinalProject.Models.Entities.Spell

@{
    ViewData["Title"] = "Edit Spell";
}

<h1>Edit Spell</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="Components">Components</label>
        <input type="text" asp-for="Components" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Type">Type</label>
        <input type="text" asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Level">Level</label>
        <input type="number" asp-for="Level" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
