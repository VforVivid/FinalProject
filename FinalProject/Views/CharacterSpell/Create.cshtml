@model FinalProject.Models.ViewModels.CharacterSpellVM

@{
    ViewData["Title"] = $"Assign a Spell to {Model.Character.FirstName}";
}

<h1>Assign a Spell</h1>

<form asp-action="Create" method="post">
    <input type="hidden" name="characterId" value="@Model.Character.Id" />

    <div class="form-group">
        <label for="spellId">Available Spells</label>
        <select id="spellId" name="spellId" class="form-control" required>
            @foreach (var spell in Model.AvailableSpells)
            {
                <option value="@spell.Id">@spell.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Assign Spell</button>
    <a asp-action="Details" asp-controller="Character" asp-route-id="@Model.Character.Id" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
